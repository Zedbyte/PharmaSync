<div class="h-full w-full px-8 py-6">

    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold">View Material</h2>
        <button onclick="viewMaterialClosePanel()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition-all duration-150 flex items-center">
            <svg class="w-3 h-3 mr-2 text-white" xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"/>
            </svg>  
            Close
        </button>
    </div>

    <div class="bg-slate-200 dark:bg-slate-600 p-5 rounded-xl min-h-[calc(100%-80px)]">

        <div class="flex justify-end mb-4">
            <a href="#">
                <button class="inline-flex items-center text-gray-500 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 
                focus:ring-gray-100 font-medium rounded-lg text-sm px-3 py-2 ml-5 
                dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
                    <ion-icon name="arrow-down-outline" class="add__icon text-gray-500 dark:text-gray-400 mr-2"></ion-icon>    
                    <span class="hidden sm:inline">Export Data</span>
                </button>
            </a>
        </div>
    
        <div class="mx-auto p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg my-6" id="invoice">
        
            <div class="grid grid-cols-2 items-center">
                <div>
                    <!--  Company logo  -->
                    <img src="\public\assets\images\PharmaSync__Logo_Light.svg" alt="company-logo"
                        height="100" width="100">
                </div>
        
                <div class="text-right">
                    <p>
                        PharmaSync Inc.
                    </p>
                    <p class="text-gray-500 dark:text-gray-200 text-sm">
                        sales@pharmasync.com
                    </p>
                    <p class="text-gray-500 dark:text-gray-200 text-sm mt-1">
                        +63-190-597-235
                    </p>
                    <p class="text-gray-500 dark:text-gray-200 text-sm mt-1">
                        ID: 1003
                    </p>
                </div>
            </div>
        
            <!-- Material info -->
            <div class="grid grid-cols-2 items-center mt-8">

                <div class="text-left">
                    <p>
                        <span class="text-gray-400">Material Name:</span>
                        <span class="text-gray-800 dark:text-gray-200 font-semibold">{{ materialData[0].name }}</span>
                    </p>
                    <p>
                        <span class="text-gray-400">Type:</span>
                        <span class="text-gray-800 dark:text-gray-200">{{ materialData[0].material_type| title }} Material</span>
                    </p>
                    <p>
                        <span class="text-gray-400">Description:</span>
                        <span class="text-gray-800 dark:text-gray-200 truncate">{{ materialData[0].description }}</span>
                    </p>
                </div>
            </div>
        
            <!-- Invoice Items -->
            <div class="-mx-4 mt-8 flow-root sm:mx-0">
                <table class="min-w-full">
                    <colgroup>
                        <col class="sm:w-1/6">
                        <col class="sm:w-1/6">
                        <col class="sm:w-1/6">
                        <col class="sm:w-1/6">
                        <col class="sm:w-1/6">
                        <col class="sm:w-1/6">
                    </colgroup>
                    <thead class="border-b border-gray-300 text-gray-900 dark:text-white">
                        <tr>
                            <tr>
                                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:pl-0">Lot ID</th>
                                <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:table-cell">Number</th>
                                <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:table-cell">Stock Level</th>
                                <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:table-cell">Production Date</th>
                                <th scope="col" class="py-3.5 pl-3 pr-4 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:pr-0">Unit Price</th>
                                <th scope="col" class="py-3.5 pl-3 pr-4 text-left text-sm font-semibold text-gray-900 dark:text-gray-50 sm:pr-0">Expiration Date</th>
                            </tr>
                        </tr>
                    </thead>
                    <tbody>
                        {% for material in MaterialLotData %}
                        <tr class="border-b border-gray-200">
                            <td class="hidden px-3 py-5 text-left text-sm text-gray-500 dark:text-gray-200 sm:table-cell">{{ material.lot_id }}</td>
                            <td class="hidden px-3 py-5 text-left text-sm text-gray-500 dark:text-gray-200 sm:table-cell">{{ material.number }}</td>
                            <td class="hidden px-3 py-5 text-left text-sm text-gray-500 dark:text-gray-200 sm:table-cell">{{ material.stock_level }}</td>
                            <td class="py-5 pl-3 pr-4 text-left text-sm text-gray-500 dark:text-gray-200 sm:pr-0">{{ material.production_date }}</td>
                            <td class="py-5 pl-3 pr-4 text-left text-sm text-gray-500 dark:text-gray-200 sm:pr-0">${{ material.unit_price | number_format(2) }}</td>
                            <td class="py-5 pl-3 pr-4 text-left text-sm text-gray-500 dark:text-gray-200 sm:pr-0">{{ material.expiration_date }}</td>
                            <td class="py-5 pl-3 pr-4 text-left text-sm text-gray-500 dark:text-gray-200 sm:pr-0">
                                <button onclick="moreLotDetails('{{ material.lot_id }}')" class="text-blue-500 hover:underline dark:text-blue-400">
                                Details
                                </button>
                            </td>
                        </tr>
                        <!-- Detailed Information (Hidden by Default) -->
                        <tr id="{{ material.lot_id }}" class="hidden">
                            <td colspan="7" class="bg-gray-50 p-4 dark:bg-slate-700">
                                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
                                    <thead class="border-b border-gray-300 text-gray-900 dark:text-gray-100">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-sm font-medium">Detail</th>
                                            <th scope="col" class="px-6 py-3 text-left text-sm font-medium">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200 dark:divide-gray-600">
                                        <tr>
                                            <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-200">QC Status</td>
                                            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">{{ material.qc_status }}</td>
                                        </tr>
                                        <tr>
                                            <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-200">QC Notes</td>
                                            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">{{ material.qc_notes }}</td>
                                        </tr>
                                        <tr>
                                            <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-200">Supplier</td>
                                            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">{{ material.supplier_name }}</td>
                                        </tr>
                                        <tr>
                                            <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-200">Contact</td>
                                            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">{{ material.contact_no }}</td>
                                        </tr>
                                        <tr>
                                            <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-200">Email</td>
                                            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">{{ material.email }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        
            <!--  Footer  -->
            <div class="border-t-2 pt-4 text-xs text-gray-500 dark:text-gray-300 text-center mt-16">
                If you have any inquiries, contact Mr. Mark Jerome Santos.
            </div>
        
        </div>
    </div>
</div>

<script>
    function moreLotDetails(id) {
        const row = document.getElementById(id);
        row.classList.toggle('hidden');
    }
</script>
