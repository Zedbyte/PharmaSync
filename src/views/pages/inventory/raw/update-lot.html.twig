<div class="h-full w-full px-8 py-6" id="updateLotPanel">
    <div class="flex justify-between mb-6">
        <h2 class="text-2xl font-semibold">Update Lot</h2>
        <button onclick="updateLotClosePanel()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition-all duration-150">
            <svg class="w-4 h-4 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>                
        </button>
    </div>

    <form action="" method="post" class="update__form_lot h-full space-y-6">

        <input type="hidden" name="material_id" value="{{ lotData.material_id }}">
        <input type="hidden" name="lot_id" value="{{ lotData.id }}">

        <!-- Items Section -->
        <div class="border-t border-gray-300 dark:border-gray-600 mt-6 pt-6">
            <h3 class="text-xl font-semibold mb-6">Lot Details</h3>

            <div id="items__container_lot" class="space-y-6">
                <div class="item__template_lot relative grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 border-b border-gray-300 dark:border-gray-600 py-6">

                    <div>
                        <label for="lot-number" class="block text-sm font-medium">Lot Number</label>
                        <input type="text" id="lot-number" name="lot_number" placeholder="Paracetamol"
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" 
                        value="{{ lotData.number }}">
                    </div>

                    <div>
                        <label for="production-date" class="block text-sm font-medium">Production Date</label>
                        <input type="text" id="production-date" name="production_date" placeholder="28 Jun, 2022 - 10:00"
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 focus:border-blue-400 
                        dark:focus:border-blue-500 dark:bg-gray-700 px-4" onfocus="(this.type='date')" onblur="(this.type='text')" value="{{ lotData.production_date }}">
                    </div>

                    <div>
                        <label for="stock-level" class="block text-sm font-medium">Stock Level</label>
                        <input type="text" id="stock-level" name="stock_level" placeholder="Paracetamol"
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" 
                        value="{{ lotData.stock_level }}">
                    </div>

                    <div>
                        <label for="expiration-date" class="block text-sm font-medium">Expiration Date</label>
                        <input type="text" id="expiration-date" name="expiration_date" placeholder="28 Jun, 2022 - 10:00" 
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4"
                        onfocus="(this.type='date')" onblur="(this.type='text')" 
                        value="{{ lotData.expiration_date }}">
                    </div>

                    <!-- Quality Control -->
                    <div>
                        <label for="qc-status" class="block text-sm font-medium">QC Status</label>
                        <select id="qc-status" name="qc_status[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" >
                            <option value="" {% if lotData.qc_status is empty %}selected{% endif %} disabled>Select QC Status</option>
                            <option value="approved" {% if lotData.qc_status == 'approved' %}selected{% endif %}>Approved</option>
                            <option value="rejected" {% if lotData.qc_status == 'rejected' %}selected{% endif %}>Rejected</option>
                            <option value="pending" {% if lotData.qc_status == 'pending' %}selected{% endif %}>Pending</option>
                        </select>
                    </div>

                    <div>
                        <label for="inspection-date" class="block text-sm font-medium">Inspection Date</label>
                        <input type="text" id="inspection-date" name="inspection_date" placeholder="28 Jun, 2022 - 10:00" 
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4"
                        onfocus="(this.type='date')" onblur="(this.type='text')" 
                        value="{{ lotData.inspection_date }}">
                    </div>

                    <div class="md:col-span-2 lg:col-span-3">
                        <label for="qc-notes" class="block text-sm font-medium">QC Notes</label>
                        <textarea id="qc-notes" name="qc_notes" placeholder="QC review pending for new material purchase; details to follow upon inspection."
                        class="mt-1 block w-full h-24 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4 py-2" >{{ lotData.qc_notes }}</textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save and Reset Buttons -->
        <div class="flex justify-end gap-4 mt-6 pb-6">
            <button type="reset" class="transition-all duration-150 px-6 py-2 rounded-lg bg-gray-300 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-700">Reset</button>
            <button type="submit" class="transition-all duration-150 px-6 py-2 text-white bg-[#2998FF] dark:bg-[#7655fa] rounded-lg hover:bg-opacity-80">Save</button>
        </div>
    </form>
</div>