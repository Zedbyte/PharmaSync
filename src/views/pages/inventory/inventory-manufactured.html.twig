    <section class="order__list_container_content mt-8 flex flex-col h-full">
        <div class="flex-grow flex flex-col">
            <div class="flex justify-between items-end space-x-5 pb-3">

                <div class="flex justify-start sm:w-auto w-6/12 h-full">
                    <div class="relative mb-3 2xl:mb-0">
                        <form id="searchForm" class="filter-form" action="" method="post">
                            <div class="absolute inset-y-0 left-0 rtl:inset-r-0 rtl:right-0 flex items-center ps-3 pointer-events-none">
                                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
                            </div>
                            <input type="text" id="table-search"  name="purchase_search"
                            class="block w-full md:w-80 p-3 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 
                            focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 
                            dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="search for a medicine" 
                            {% if (purchase_search) %}
                                value="{{ purchase_search }}"
                            {% endif %}>
                        </form>
                    </div>

                    <div class="flex justify-center sm:justify-end sm:w-auto">
                        <!-- Export Button -->
                        <a href="/export-purchase" class="flex items-center">
                            <button class="inline-flex items-center text-gray-500 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 
                            focus:ring-gray-100 font-medium rounded-lg text-sm px-3 py-2 ml-5 
                            dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">
                                <ion-icon name="arrow-down-outline" class="add__icon text-gray-500 dark:text-gray-400 mr-2"></ion-icon>    
                                <span class="hidden sm:inline">Export Data</span>
                            </button>
                        </a>
                    </div>
                </div>


                <div class="flex justify-end w-6/12">
                    <div class="mb-3 2xl:mb-0">
                        <button onclick="addOrderTogglePanel()" class="bg-[#2998FF] hover:bg-[#3280c9]  
                        dark:bg-[#7655fa] dark:hover:bg-[#8162fa] transition-all duration-200 text-white 
                        rounded-lg px-3 py-2.5 flex justify-center items-center text-nowrap">
                            <ion-icon name="add-outline" class="add__icon dark:text-[#fdfdfd] mr-2"></ion-icon>    
                            Add Order
                        </button>
                    </div>
                </div>
            </div>
    
            <div class="h-full p-6 rounded-b-lg border-x border-b border-t-0 dark:border-slate-800 bg-gray-50 border-gray-300 dark:bg-slate-500 flex-grow">

                <div class="w-full max-h-[24rem] overflow-y-auto border border-gray-300 dark:border-gray-700 rounded-lg">
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                        <thead class="relative text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr class="sticky top-0 bg-white dark:bg-gray-700">
                                <th scope="col" class="p-4">
                                    <div class="flex items-center">
                                        <input id="checkbox-all-search" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                        <label for="checkbox-all-search" class="sr-only">checkbox</label>
                                    </div>
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    ID
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Medicine
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Type
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Batch Details
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Rack
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for medicine in medicineData %}
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td class="w-4 p-4">
                                        <div class="flex items-center">
                                            <input id="{{ medicine.id }}" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                            <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
                                        </div>
                                    </td>
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        {{ medicine.id }}
                                    </th>
                                    <td class="px-6 py-4">
                                        {{ medicine.name }}
                                    </td>
                                    <td class="px-6 py-4">
                                        {{ medicine.type }}
                                    </td>
                                    <td class="px-6 py-4">
                                        {% for batch in medicine.batches %}
                                            <div>
                                                Batch ID: {{ batch.id }} <br/> 
                                                Expiry Date: {{ batch.expiry_date }} <br/>
                                                Stock Leve: {{ batch.stock_level }}
                                            </div>
                                        {% endfor %}
                                    </td>
                                    <td class="px-6 py-4">
                                        Rack
                                    </td>
                                    <td class="md:px-6 md:py-4 space-x-3 flex flex-wrap justify-center items-center">
                                        <button 
                                        onclick="updateOrderPanel(this)"
                                        data-id="{{ order.order_id }}" 
                                        class="showUpdateOrderPanel text-blue-400 
                                        dark:text-blue-700 
                                        hover:text-blue-800 text-xs md:text-base transition-all duration-200">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </button>
                                        
                                        <button 
                                        onclick="openDeleteModal(this)" 
                                        data-id="{{ order.order_id }}" 
                                        data-material-count="{{ order.product_count }}" 
                                        class="text-red-400 hover:text-red-800 dark:text-red-700 
                                        text-xs md:text-base transition-all duration-200">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>

                                        <button 
                                        onclick="viewOrderPanel(this)" 
                                        data-id="{{ order.order_id }}" 
                                        class="text-green-400 hover:text-green-800 dark:text-green-700 
                                        dark:hover:text-green-700 text-xs md:text-base transition-all duration-200">
                                            <i class="fa-solid fa-circle-info"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    


{% endblock %}


{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="{{ ASSETS_URL }}/js/order/calendarThemeOrder.js"></script>


{% endblock %}
