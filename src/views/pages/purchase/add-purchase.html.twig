{% block add_purchase %}

    <div class="h-full w-full px-8 py-6">
        <h2 class="text-2xl font-semibold mb-6">Add Purchase</h2>
    
        <!-- Purchase Information Section -->
        <form class="h-full space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="purchase-date" class="block text-sm font-medium">Purchase Date</label>
                    <input type="date" id="purchase-date" name="purchase_date" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 focus:border-blue-400 dark:focus:border-blue-500 dark:bg-gray-700 px-4">
                </div>
    
                <div>
                    <label for="vendor" class="block text-sm font-medium">Vendor</label>
                    <select id="vendor" name="vendor" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        <option value="">Select Vendor</option>
                        <option value="new">Add New Vendor</option>
                    </select>
                </div>
    
                <div>
                    <label for="status" class="block text-sm font-medium">Status</label>
                    <select id="status" name="status" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        <option value="pending">Pending</option>
                        <option value="delivered">Delivered</option>
                        <option value="backordered">Backordered</option>
                    </select>
                </div>
            </div>
    
            <!-- Items Section -->
            <div class="border-t border-gray-300 dark:border-gray-600 mt-6 pt-6">
                <h3 class="text-xl font-semibold mb-6">Material in Purchase</h3>
    
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div>
                            <label for="material-type" class="block text-sm font-medium">Material Type</label>
                            <select id="material-type" name="material_type[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                                <option value="raw">Raw Material</option>
                                <option value="packaging">Packaging Material</option>
                                <option value="equipment">Equipment</option>
                            </select>
                        </div>
    
                        <div>
                            <label for="material-name" class="block text-sm font-medium">Material Name</label>
                            <input type="text" id="material-name" name="material_name[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div class="md:col-span-2 lg:col-span-3">
                            <label for="description" class="block text-sm font-medium">Description</label>
                            <input type="text" id="description" name="description[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div>
                            <label for="quantity" class="block text-sm font-medium">Quantity</label>
                            <input type="number" id="quantity" name="quantity[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div>
                            <label for="unit-price" class="block text-sm font-medium">Unit Price</label>
                            <input type="number" id="unit-price" name="unit_price[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div>
                            <label for="batch-number" class="block text-sm font-medium">Batch Number</label>
                            <input type="text" id="batch-number" name="batch_number[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div>
                            <label for="expiry-date" class="block text-sm font-medium">Expiry Date</label>
                            <input type="date" id="expiry-date" name="expiry_date[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <!-- Quality Control -->
                        <div>
                            <label for="qc-status" class="block text-sm font-medium">QC Status</label>
                            <select id="qc-status" name="qc_status[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                                <option value="approved">Approved</option>
                                <option value="rejected">Rejected</option>
                                <option value="pending">Pending</option>
                            </select>
                        </div>
    
                        <div>
                            <label for="inspection-date" class="block text-sm font-medium">Inspection Date</label>
                            <input type="date" id="inspection-date" name="inspection_date[]" class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4">
                        </div>
    
                        <div class="md:col-span-2 lg:col-span-3">
                            <label for="qc-notes" class="block text-sm font-medium">QC Notes</label>
                            <textarea id="qc-notes" name="qc_notes[]" class="mt-1 block w-full h-24 rounded-lg border border-gray-300 dark:border-gray-500 dark:bg-gray-700 px-4 py-2"></textarea>
                        </div>
                    </div>
    
                    <button type="button" class="mt-4 px-4 py-2 text-white bg-[#2998FF] dark:bg-[#7655fa] rounded-lg hover:bg-opacity-80">Add Another Item</button>
                </div>
            </div>
    
            <!-- Save and Reset Buttons -->
            <div class="flex justify-between gap-4 mt-6">
                <div class=" md:order-2">
                    <button type="reset" class="px-6 py-2 rounded-lg bg-gray-300 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-700">Reset</button>
                    <button type="submit" class="px-6 py-2 text-white bg-[#2998FF] dark:bg-[#7655fa] rounded-lg hover:bg-opacity-80">Save</button>
                </div>

                <div>
                    <button onclick="togglePanel()" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Close</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}