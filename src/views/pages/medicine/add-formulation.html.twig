<div class="h-full w-full px-8 py-6">
    <div class="flex justify-between mb-6">
        <h2 class="text-2xl font-semibold">Add Formulation</h2>
        <button onclick="addMedicineTogglePanel('addFormulationPanel')" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition-all duration-150">
            <svg class="w-4 h-4 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6"/>
            </svg>
        </button>
    </div>

    <!-- Formulation Information Section -->
    <form action="/add-formulation" method="post" class="">
        <div class="border-t border-gray-300 dark:border-gray-600 mt-6 pt-6">
            <div id="items__container_formulation_new" class="space-y-6">
                <div class="item__template_formulation_new relative grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 border-b border-gray-300 dark:border-gray-600 py-6">

                    <div>
                        <label for="medicine-name" class="block text-sm font-medium">Medicine Name</label>
                        <select id="medicine-name-id" name="medicine_name[]" class="medicine-name mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" >
                            <option value="" selected disabled>Select Medicine</option>
                            {% for medicine in medicineData %}
                                <option value="{{ medicine.id }}">{{ medicine.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label for="material-name" class="block text-sm font-medium">Material Name</label>
                        <select id="material-name-id" name="material_name[]" class="material-name mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" >
                            <option value="" selected disabled>Select Material</option>
                            {% for material in materialData %}
                                <option value="{{ material.id }}">{{ material.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label for="quantity-required" class="block text-sm font-medium">Quantity Required</label>
                        <input type="number" id="quantity-required" name="quantity_required[]" placeholder="1" step="any"
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" >
                    </div>

                    <div>
                        <label for="unit" class="block text-sm font-medium">Unit</label>
                        <input type="text" id="unit" name="unit[]" placeholder="mg"
                        class="mt-1 block w-full h-12 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4" >
                    </div>

                    <div class="col-span-2">
                        <label for="description" class="block text-sm font-medium">Description</label>
                        <textarea id="description" name="description[]" placeholder="Solvent for dissolution"
                        class="mt-1 block w-full h-24 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-700 px-4 py-2"></textarea>
                    </div>

                    <div class="absolute right-0 top-[-15px] mb-4">
                        <button onclick="removeFormulation(event)" class="remove-button-new hidden bg-red-500 hover:bg-red-600 text-white px-2 py-2 rounded transition-all duration-150  items-center space-x-1"> 
                            <svg class="w-2.5 h-2.5" xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"/>
                            </svg>  
                            <p class="text-sm">Remove</p>
                        </button>
                    </div>
                </div>
            </div>

            
            <button type="button" onclick="addNewFormulation()" class="transition-all duration-150 mt-4 px-4 py-2 text-white bg-[#2998FF] dark:bg-[#7655fa] rounded-lg hover:bg-opacity-80">Add Another Item</button>
            
        </div>

        <!-- Save and Reset Buttons -->
        <div class="flex justify-end gap-4 mt-6 pb-6">
            <button type="reset" class="transition-all duration-150 px-6 py-2 rounded-lg bg-gray-300 dark:bg-gray-600 hover:bg-gray-400 dark:hover:bg-gray-700">Reset</button>
            <button type="submit" class="transition-all duration-150 px-6 py-2 text-white bg-[#2998FF] dark:bg-[#7655fa] rounded-lg hover:bg-opacity-80">Save</button>
        </div>
    </form>
</div>