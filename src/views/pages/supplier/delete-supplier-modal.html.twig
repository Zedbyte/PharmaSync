<div id="delete-supplier-modal" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex justify-center items-center z-50 hidden">
    <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
        <h2 class="text-xl font-semibold mb-4">Delete Supplier</h2>
        <p class="mb-4">Are you sure you want to delete this supplier? This action cannot be undone.</p>

        <!-- Hidden input for supplier ID -->
        <form action="/delete-supplier" method="POST" id="delete-supplier-form">
            <input type="hidden" name="supplier_id" id="supplier_id" value="">

            <div class="flex justify-end space-x-4">
                <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-md" onclick="closeModal()">Cancel</button>
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md">Delete</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openDeleteModal(supplierId) {
        document.getElementById('supplier_id').value = supplierId;
        document.getElementById('delete-supplier-modal').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('delete-supplier-modal').classList.add('hidden');
    }
</script>
