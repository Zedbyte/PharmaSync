<div id="updateCustomerModal" class="hidden fixed inset-0 z-[9999] flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 w-full max-w-md shadow-lg">
        <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Update Customer</h2>
        <form method="POST" action="/update-customer">
            <input type="hidden" name="id" id="update-customer-id">
            <div class="mb-4">
                <label for="update-customer-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                <input type="text" id="update-customer-name" name="name" class="mt-1 p-2 border border-gray-300 rounded-lg w-full dark:bg-gray-700 dark:text-white" required>
            </div>
            <div class="mb-4">
                <label for="update-customer-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input type="email" id="update-customer-email" name="email" class="mt-1 p-2 border border-gray-300 rounded-lg w-full dark:bg-gray-700 dark:text-white" required>
            </div>
            <div class="mb-4">
                <label for="update-customer-address" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Address</label>
                <input type="text" id="update-customer-address" name="address" class="mt-1 p-2 border border-gray-300 rounded-lg w-full dark:bg-gray-700 dark:text-white" required>
            </div>
            <div class="mb-4">
                <label for="update-customer-contact_no" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Contact No</label>
                <input type="text" id="update-customer-contact_no" name="contact_no" class="mt-1 p-2 border border-gray-300 rounded-lg w-full dark:bg-gray-700 dark:text-white" required>
            </div>
            <div class="flex justify-end">
                <button type="button" onclick="closeUpdateCustomerModal()" class="text-gray-500 dark:text-gray-400 px-4 py-2 rounded-lg">Cancel</button>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg ml-2">Update</button>
            </div>
        </form>
    </div>
</div>
