<!-- Add Customer Modal -->
<div id="addCustomerModal" 
     class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 transition-opacity duration-300">
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg w-full max-w-md p-6 transform scale-95 transition-transform duration-300">
        <!-- Modal Header -->
        <div class="flex justify-between items-center border-b pb-4 mb-4 dark:border-gray-600">
            <h2 class="text-lg font-semibold text-gray-700 dark:text-white">Add New Customer</h2>
            <button type="button" 
                    onclick="closeAddCustomerModal()" 
                    class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <!-- Modal Form -->
        <form id="addCustomerForm" method="POST" action="/add-customer">
            <!-- Name -->
            <div class="mb-4">
                <label for="customerName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Name
                </label>
                <input type="text" id="customerName" name="name" required
                       class="block w-full mt-1 p-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white focus:ring-blue-500 focus:border-blue-500">
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="customerEmail" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Email
                </label>
                <input type="email" id="customerEmail" name="email" required
                       class="block w-full mt-1 p-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white focus:ring-blue-500 focus:border-blue-500">
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label for="customerAddress" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Address
                </label>
                <textarea id="customerAddress" name="address" rows="3" required
                          class="block w-full mt-1 p-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white focus:ring-blue-500 focus:border-blue-500"></textarea>
            </div>

            <!-- Contact No -->
            <div class="mb-4">
                <label for="customerContact" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Contact No
                </label>
                <input type="text" id="customerContact" name="contact_no" required
                       class="block w-full mt-1 p-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white focus:ring-blue-500 focus:border-blue-500">
            </div>

            <!-- Form Buttons -->
            <div class="flex justify-end space-x-4">
                <button type="button" 
                        onclick="closeAddCustomerModal()" 
                        class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
                    Cancel
                </button>
                <button type="submit" 
                        class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                    Add Customer
                </button>
            </div>
        </form>
    </div>
</div>
