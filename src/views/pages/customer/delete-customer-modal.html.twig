<!-- Delete Customer Modal -->
<div id="deleteCustomerModal" 
     class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 transition-opacity duration-300">
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg w-full max-w-md p-6 transform scale-95 transition-transform duration-300">
        <!-- Modal Header -->
        <div class="flex justify-between items-center border-b pb-4 mb-4 dark:border-gray-600">
            <h2 class="text-lg font-semibold text-gray-700 dark:text-white">Delete Customer</h2>
            <button type="button" 
                    onclick="closeDeleteCustomerModal()" 
                    class="text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <p class="text-gray-600 dark:text-gray-300 mb-4">
            Are you sure you want to delete this customer? This action cannot be undone.
        </p>

        <!-- Modal Form -->
        <form id="deleteCustomerForm" method="POST" action="/delete-customer">
            <input type="hidden" name="customer_id" id="deleteCustomerId">
            <div class="flex justify-end space-x-4">
                <button type="button" 
                        onclick="closeDeleteCustomerModal()" 
                        class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
                    Cancel
                </button>
                <button type="submit" 
                        class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">
                    Delete
                </button>
            </div>
        </form>
    </div>
</div>
